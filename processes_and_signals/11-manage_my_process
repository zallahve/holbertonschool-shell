#!/usr/bin/env bash
# This script manages the manage_my_process daemon (start|stop|restart)

DIR="$(cd "$(dirname "$0")" && pwd)"
DAEMON="$DIR/manage_my_process"
PID_FILE="/var/run/my_process.pid"

start_proc() {
  sudo bash -c "$DAEMON >/dev/null 2>&1 & echo \$! > $PID_FILE"
}

stop_proc() {
  if [ -f "$PID_FILE" ]; then
    pid=$(cat "$PID_FILE" 2>/dev/null)
    [ -n "$pid" ] && sudo kill "$pid" 2>/dev/null || true
    sudo rm -f "$PID_FILE" 2>/dev/null || true
  fi
}

case "$1" in
  start)
    start_proc
    echo "manage_my_process started"
    ;;
  stop)
    stop_proc
    echo "manage_my_process stopped"
    ;;
  restart)
    stop_proc
    start_proc
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac
