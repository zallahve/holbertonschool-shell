#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid, loops forever, and handles signals

PID_FILE="/var/run/myscript.pid"

write_pid_file() {
  if [ "$(id -u)" -eq 0 ]; then
    mkdir -p "$(dirname "$PID_FILE")"
    echo "$$" > "$PID_FILE"
  else
    sudo -n mkdir -p "$(dirname "$PID_FILE")"
    echo "$$" | sudo -n tee "$PID_FILE" > /dev/null
  fi
}

remove_pid_file() {
  if [ "$(id -u)" -eq 0 ]; then
    rm -f "$PID_FILE"
  else
    sudo -n rm -f "$PID_FILE"
  fi
}

on_sigterm() {
  echo "I hate the kill command"
  remove_pid_file
  exit 0
}

on_sigint() {
  echo "Y U no love me?!"
}

on_sigquit() {
  remove_pid_file
  exit 0
}

trap on_sigterm SIGTERM
trap on_sigint SIGINT
trap on_sigquit SIGQUIT

write_pid_file

while true; do
  echo "To infinity and beyond"
  sleep 2
done
