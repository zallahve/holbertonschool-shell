#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid, loops forever, and handles signals

PID_FILE="/var/run/myscript.pid"

write_pid_file() {
  # Try direct write (works when running as root)
  if echo "$$" > "$PID_FILE" 2>/dev/null; then
    return
  fi

  # Fallback: try passwordless sudo (common in sandboxes)
  if command -v sudo >/dev/null 2>&1; then
    echo "$$" | sudo -n tee "$PID_FILE" >/dev/null 2>/dev/null || true
  fi
}

remove_pid_file() {
  rm -f "$PID_FILE" 2>/dev/null || true
  if command -v sudo >/dev/null 2>&1; then
    sudo -n rm -f "$PID_FILE" 2>/dev/null || true
  fi
}

on_sigterm() {
  echo "I hate the kill command"
  remove_pid_file
  exit 0
}

on_sigint() {
  echo "Y U no love me?!"
}

on_sigquit() {
  remove_pid_file
  exit 0
}

trap on_sigterm SIGTERM
trap on_sigint SIGINT
trap on_sigquit SIGQUIT

write_pid_file

while true; do
  echo "To infinity and beyond"
  sleep 2
done
