#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid, loops forever, and handles signals

PID_FILE="/var/run/myscript.pid"
TMP_FILE="/tmp/myscript.pid"

echo "$$" > "$TMP_FILE"
mkdir -p /var/run 2>/dev/null
ln -sf "$TMP_FILE" "$PID_FILE"

cleanup_and_exit() {
  rm -f "$TMP_FILE" "$PID_FILE"
  exit 0
}

on_sigterm() {
  echo "I hate the kill command"
  cleanup_and_exit
}

on_sigint() {
  echo "Y U no love me?!"
}

trap on_sigterm SIGTERM
trap on_sigint SIGINT
trap cleanup_and_exit SIGQUIT

while true; do
  echo "To infinity and beyond"
  sleep 2
done
