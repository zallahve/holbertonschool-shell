#!/usr/bin/env bash
# This script creates /var/run/myscript.pid, prints forever, and handles SIGTERM/SIGINT/SIGQUIT

PID_FILE="/var/run/myscript.pid"

# Ensure directory exists (some sandboxes don't have /var/run by default)
mkdir -p /var/run 2>/dev/null

# Create PID file with our PID
echo "$$" > "$PID_FILE"

cleanup_and_exit() {
  rm -f "$PID_FILE"
  exit 0
}

on_sigterm() {
  echo "I hate the kill command"
  cleanup_and_exit
}

on_sigint() {
  echo "Y U no love me?!"
}

trap on_sigterm SIGTERM
trap on_sigint SIGINT
trap cleanup_and_exit SIGQUIT

while true; do
  echo "To infinity and beyond"
  sleep 2
done
